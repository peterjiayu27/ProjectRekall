<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameOver">

    <ImageView
        android:id="@+id/backGameOver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/gameOverTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="639dp"
        android:text="Game Over"
        android:textSize="42sp"
        app:fontFamily="@font/visitor1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/backGameOver"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/backGameOver"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yourScoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="119dp"
        android:text="Your Score"
        android:textSize="28sp"
        app:fontFamily="@font/visitor2"
        app:layout_constraintBottom_toBottomOf="@+id/backGameOver"
        app:layout_constraintEnd_toStartOf="@+id/backGameOver"
        app:layout_constraintStart_toEndOf="@+id/backGameOver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/gameOverScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:text="0"
        android:textSize="50sp"
        app:fontFamily="@font/visitor1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/backGameOver"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toEndOf="@+id/backGameOver"
        app:layout_constraintTop_toTopOf="@+id/backGameOver"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/menuButtonOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="260dp"
        android:text="- Main Menu -"
        android:textSize="28sp"
        app:fontFamily="@font/visitor1"
        app:layout_constraintBottom_toBottomOf="@+id/backGameOver"
        app:layout_constraintEnd_toStartOf="@+id/backGameOver"
        app:layout_constraintStart_toEndOf="@+id/backGameOver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />
</androidx.constraintlayout.widget.ConstraintLayout>